<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @place["name"] %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- My own CSS -->
    <link rel="stylesheet" href="/stylesheets/application.css">

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .fixed-bottom-buttons {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: white;
            border-top: 1px solid #ddd;
            padding: 10px;
            display: flex;
            justify-content: right;
        }
        .fixed-bottom-buttons form {
            margin-bottom: 0;
        }
             .centered-button-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 30vh; /* Adjust the height as needed */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1><%= @place["name"] %></h1>
        <h4>My Entries:</h4>
        <div class="accordion" id="entriesAccordion">
            <% @entries.each_with_index do |entry, index| %>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading<%= index %>">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
                            <%= entry["title"] %>
                        </button>
                    </h2>
                    <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>">
                        <div class="accordion-body">
                            <p class="text-muted"><%= entry["occurred_on"] %></p>
                            <p><%= entry["description"] %></p>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

    <div class="centered-button-container">
        <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-success btn-sm">New Entry</a>
    </div>

    <div class="fixed-bottom-buttons">
        <a href="/places" class="btn btn-primary btn-sm">Back to All Places</a>
        <form action="/places/<%= @place["id"] %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit" class="btn btn-danger btn-sm">Delete Place</button>
        </form>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
